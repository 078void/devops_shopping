@model Shopping.Client.Models.Product

@{
    ViewData["Title"] = "編輯產品";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0">✏️ 編輯產品</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        
                        <!-- 隱藏的 ID 欄位 -->
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">產品名稱 <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">產品類別 <span class="text-danger">*</span></label>
                            <select asp-for="Category" class="form-select" required>
                                <option value="">-- 請選擇類別 --</option>
                                <option value="Smart Phone">智慧型手機</option>
                                <option value="Laptop">筆記型電腦</option>
                                <option value="Tablet">平板電腦</option>
                                <option value="White Appliances">白色家電</option>
                                <option value="Electronics">電子產品</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">產品描述</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">產品圖片檔名</label>
                            <input asp-for="ImageFile" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">價格 (NT$) <span class="text-danger">*</span></label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <strong>📝 提示：</strong> 修改完成後請記得儲存變更
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                ↩️ 取消
                            </a>
                            <button type="submit" class="btn btn-warning text-dark">
                                💾 儲存變更
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}







