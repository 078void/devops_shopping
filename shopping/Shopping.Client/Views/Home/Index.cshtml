@model IEnumerable<Shopping.Client.Models.Product>

@{
    ViewData["Title"] = "產品列表";
}

<div class="container mt-4">
    <!-- 標題列 -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">🛒 購物商城 - 產品列表</h1>
            <p class="lead">歡迎來到微服務架構的購物網站!</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> ➕ 新增產品
            </a>
        </div>
    </div>

    <!-- 訊息提示 -->
    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                ✅ @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                ❌ @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }

    <!-- 產品列表 -->
    <div class="row">
        <div class="col-md-12">
            @if (Model != null && Model.Any())
            {
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th width="100">圖片</th>
                                <th>產品名稱</th>
                                <th>類別</th>
                                <th>描述</th>
                                <th class="text-end">價格</th>
                                <th class="text-center" width="180">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(product.ImageFile))
                                            {
                                                    <img src="@product.ImageFile" alt="@product.Name" 
                                                         class="img-thumbnail" 
                                                         style="max-width: 80px; max-height: 80px; object-fit: cover;" 
                                                         onerror="this.src='https://via.placeholder.com/80?text=No+Image';" />
                                            }
                                            else
                                            {
                                                    <img src="https://via.placeholder.com/80?text=No+Image" 
                                                         alt="無圖片" 
                                                         class="img-thumbnail" 
                                                         style="max-width: 80px; max-height: 80px; object-fit: cover;" />
                                            }
                                        </td>
                                        <td><strong>@product.Name</strong></td>
                                        <td><span class="badge bg-info">@product.Category</span></td>
                                        <td>@product.Description</td>
                                        <td class="text-end text-success"><strong>NT$ @product.Price.ToString("N2")</strong></td>
                                        <td class="text-center">
                                            <!-- 訂閱按鈕 -->
                                            <button type="button" 
                                                    class="btn btn-sm btn-info" 
                                                    onclick="openSubscribeModal('@product.Id', '@product.Name')"
                                                    title="訂閱降價通知">
                                                🔔 訂閱
                                            </button>
                                            
                                            <a asp-action="Edit" asp-route-id="@product.Id" 
                                            class="btn btn-sm btn-warning" title="編輯">
                                                ✏️ 編輯
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@product.Id" 
                                                method="post" class="d-inline"
                                                onsubmit="return confirm('確定要刪除「@product.Name」嗎？');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger" title="刪除">
                                                    🗑️ 刪除
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
            }
            else
            {
                    <div class="alert alert-warning" role="alert">
                        ⚠️ 目前沒有產品資料
                        <a asp-action="Create" class="alert-link">立即新增第一個產品</a>
                    </div>
            }
        </div>
    </div>
    <!-- 🆕 訂閱通知 Modal -->
<div class="modal fade" id="subscribeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-bell"></i> 🔔 訂閱價格變動通知
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="subscribeForm">
                    <input type="hidden" id="productId" />
                    
                    <div class="mb-3">
                        <label class="form-label">
                            <strong>商品名稱：</strong>
                        </label>
                        <p class="form-control-plaintext" id="productName"></p>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">
                            <strong>您的 Email：</strong>
                        </label>
                        <input type="email" 
                               class="form-control" 
                               id="email" 
                               placeholder="example@gmail.com"
                               required />
                        <div class="form-text">
                            當價格變動時，我們會發送通知到此信箱
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <strong>通知選項：</strong>
                        </label>
                        <div class="form-check">
                            <input class="form-check-input" 
                                   type="checkbox" 
                                   id="notifyOnDecrease" 
                                   checked />
                            <label class="form-check-label" for="notifyOnDecrease">
                                📉 價格<strong>下降</strong>時通知我（推薦）
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" 
                                   type="checkbox" 
                                   id="notifyOnIncrease" />
                            <label class="form-check-label" for="notifyOnIncrease">
                                📈 價格<strong>上漲</strong>時通知我
                            </label>
                        </div>
                    </div>

                    <div id="subscribeMessage" class="alert" style="display:none;"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    取消
                </button>
                <button type="button" class="btn btn-primary" onclick="submitSubscribe()">
                    <i class="bi bi-check-circle"></i> 確認訂閱
                </button>
            </div>
        </div>
    </div>
</div>
    <!--  JavaScript 處理訂閱邏輯 -->
    <script>
        let currentProductId = '';
        let currentProductName = '';

        // 開啟訂閱 Modal
        function openSubscribeModal(productId, productName) {
            currentProductId = productId;
            currentProductName = productName;
            
            document.getElementById('productId').value = productId;
            document.getElementById('productName').textContent = productName;
            document.getElementById('subscribeMessage').style.display = 'none';
            
            // 重置表單
            document.getElementById('email').value = '';
            document.getElementById('notifyOnDecrease').checked = true;
            document.getElementById('notifyOnIncrease').checked = false;
            
            // 顯示 Modal
            const modal = new bootstrap.Modal(document.getElementById('subscribeModal'));
            modal.show();
        }

        // 提交訂閱
        async function submitSubscribe() {
            const email = document.getElementById('email').value.trim();
            const notifyOnDecrease = document.getElementById('notifyOnDecrease').checked;
            const notifyOnIncrease = document.getElementById('notifyOnIncrease').checked;
            
            // 驗證
            if (!email) {
                showMessage('請輸入 Email', 'danger');
                return;
            }
            
            
            if (!notifyOnDecrease && !notifyOnIncrease) {
                showMessage('請至少選擇一種通知選項', 'danger');
                return;
            }
            
            // 準備資料
            const data = {
                ProductId: currentProductId,              
                ProductName: currentProductName,
                Email: email,
                NotifyOnPriceIncrease: notifyOnIncrease,
                NotifyOnPriceDecrease: notifyOnDecrease
            };
            try {
                // 發送訂閱請求
                const response = await fetch('/api/subscription', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    showMessage('✅ ' + result.message, 'success');
                    
                    // 3 秒後關閉 Modal
                    setTimeout(() => {
                        bootstrap.Modal.getInstance(document.getElementById('subscribeModal')).hide();
                    }, 3000);
                } else {
                    showMessage('❌ 訂閱失敗：' + (result.message || '未知錯誤'), 'danger');
                }
            } catch (error) {
                console.error('Error:', error);
                showMessage('❌ 網路錯誤，請稍後再試', 'danger');
            }
        }

        // 顯示訊息
        function showMessage(message, type) {
            const messageDiv = document.getElementById('subscribeMessage');
            messageDiv.className = `alert alert-${type}`;
            messageDiv.textContent = message;
            messageDiv.style.display = 'block';
        }
    </script>
</div>